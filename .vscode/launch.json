        },
        {
            "name": "Connect to GDB Server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/vice/src/x64.elf",
            "cwd": "${workspaceRoot}",
            "MIMode": "gdb",
            "miDebuggerPath": "/opt/toolchains/dc/sh-elf/bin/sh-elf-gdb",
            "miDebuggerServerAddress": "localhost:9999",
            "setupCommands": [
                {
                    "text": "set architecture sh",
                    "description": "Set GDB Arch to SuperH",
                    "ignoreFailures": false
                },
                {
                    "text": "directory /opt/toolchains/dc/kos/addons/SDL-dreamhal--GLDC/src",
                    "description": "Set SDL src directory",
                    "ignoreFailures": false
                },
                {
                    "text": "directory /opt/toolchains/dc/kos/addons/SDL-dreamhal--GLDC/include",
                    "description": "Set SDL include directory",
                    "ignoreFailures": false
                }
            ],
            "externalConsole": true,
            "stopAtConnect": true,
            "stopAtEntry": true,
            "logging": {
                "engineLogging": true,
                "trace": true,
                "traceResponse": true
            }
